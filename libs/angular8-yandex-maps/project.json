{
  "name": "angular8-yandex-maps",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "libs/angular8-yandex-maps/src",
  "prefix": "lib",
  "targets": {
    "build": {
      "executor": "@nrwl/angular:package",
      "options": {
        "tsConfig": "libs/angular8-yandex-maps/tsconfig.lib.json",
        "project": "libs/angular8-yandex-maps/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "libs/angular8-yandex-maps/tsconfig.lib.prod.json"
        }
      }
    },
    "test": {
      "executor": "@angular-devkit/build-angular:karma",
      "options": {
        "main": "libs/angular8-yandex-maps/src/test.ts",
        "tsConfig": "libs/angular8-yandex-maps/tsconfig.spec.json",
        "karmaConfig": "libs/angular8-yandex-maps/karma.conf.js",
        "codeCoverageExclude": ["projects/angular8-yandex-maps/src/lib/testing/*"]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": [
          "libs/angular8-yandex-maps/**/*.ts",
          "libs/angular8-yandex-maps/**/*.component.html"
        ]
      }
    }
  }
}
